generator client {
  provider = "prisma-client-js"
  output   = "../db/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  username     String     @unique
  password     String?
  createdAt    DateTime   @default(now())
  refreshToken String?
  googleId     String?    @unique
  photo        String?
  audiences    Audience[]

  @@map("users")
}

model Audience {
  id         String      @id @default(uuid())
  title      String
  searchTerm String      @default("")
  createdAt  DateTime    @default(now())
  userId     String
  user       User        @relation(fields: [userId], references: [id])
  subreddits Subreddit[]

  @@map("audiences")
}

model Subreddit {
  id          String     @id @default(uuid())
  name        String     @unique
  title       String
  subscribers Int
  icon        String
  url         String
  audiences   Audience[]

  @@map("subreddits")
}
